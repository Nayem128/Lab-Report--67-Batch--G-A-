#include <stdio.h>
int main(){
    int rows,cols;
    printf("Enter number of rows and columns:");
    scanf("%d%d",&rows,&cols);

    int arr[rows][cols];
    printf("Enter elements of the array:\n");
    for(int i=0;i<rows;i++){
        for(int j=0;j<cols;j++){
            scanf("%d",&arr[i][j]);
        }
    }
    for(int i=0;i<rows;i++){
        for(int j=0;j<cols-1;j++){
            for(int k=j+1;k<cols;k++){
                if(arr[i][j]>arr[i][k]){
                    int temp=arr[i][j];
                    arr[i][j]=arr[i][k];
                    arr[i][k]=temp;
                }
            }
        }
    }
    printf("Array after sorting each row:\n");
    for(int i=0;i<rows;i++){
        for(int j=0;j<cols;j++){
            printf("%d ",arr[i][j]);
        }
        printf("\n");
    }
    return 0;
}
