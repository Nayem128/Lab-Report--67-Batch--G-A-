#include <stdio.h>
int stack[100],top =-1;
void push(int x) {
    stack[++top]=x;
}
int pop(){
    return stack[top--];
}
void insertBottom(int x){
    if(top==-1){
        push(x);
    }
    else {
        int a =pop();
        insertBottom(x);
        push(a);
    }
}
void reverse(){
    if(top!=-1){
        int x=pop();
        reverse();
        insertBottom(x);
    }
}
int main(){
    int n,i,val;
    printf("Enter number of elements:");
    scanf("%d",&n);
    printf("Enter %d elements:\n",n);
    for(i=0;i<n;i++){
        scanf("%d",&val);
        push(val);
    }
    reverse();
    printf("Reversed stack:");
    for(i=top;i>=0;i--)
        printf("%d ",stack[i]);
    return 0;
}
